<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_history_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09AFFA">

    <TextView
        android:id="@+id/order_details_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="146dp"
        android:text="Order Details:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/order_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_details_textview"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="39dp"
        android:text="Order ID:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_items_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_id_textview"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="68dp"
        android:text="Order Items:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_items_textview"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="95dp"
        android:text="Order Total:"
        android:textSize="18sp" />

</RelativeLayout>
